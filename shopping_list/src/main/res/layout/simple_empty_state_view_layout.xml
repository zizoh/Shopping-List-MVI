<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.zizohanto.android.tobuy.shopping_list.presentation.views.EmptyStateView">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/empty_state_image_width"
        android:contentDescription="@string/cont_desc_empty_state_icon"
        android:src="@drawable/error"
        android:visibility="gone" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/empty_state_title_margin_top"
        android:textColor="@android:color/black"
        android:textSize="@dimen/empty_state_title_text_size"
        tools:text="An error occurred" />

    <TextView
        android:id="@+id/caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/empty_state_caption_margin_top"
        android:gravity="center"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        tools:text="You donâ€™t have any data right now" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/retry_btn"
        style="@style/MaterialButton.BaseStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/retry" />

</LinearLayout>
